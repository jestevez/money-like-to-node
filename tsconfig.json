{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es2017.object"
    ],
    "declaration": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}